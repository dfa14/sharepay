{% extends "layout.njk" %}

{% block content %}
<div>
  <h2 class="text-center top-space"> Welcome on your events dashboard </h2>
  <div class ="container top-space">
    <div class="row justify-content-center">
      <input type="button" class="btn btn-secondary btn-sm col-2" value="ADD AN EVENT" onclick="location.href = '/newevent';">
    </div>
  </div>
  <div class ="container top-space">
    <div class="row justify-content-center">
      <h4> EVENTS </h4>
    </div>
    <div class ="container">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">EVENT LABEL</th>
              <th scope="col">EVENT STATUS</th>
              <th scope="col"> MORE DETAILS ?</th>
            </tr>
          </thead>
          <tbody>
            {% for item in events %}
            <tr>
              <td>{{item.label}}</td>
              <td>{{item.statut}}</td>
              <td>
                <a class="btn btn-secondary btn-sm" href="/{{item.id}}" role="button">Details</a>
              </td>
            {% endfor %}
          </tbody>
        </table>
      </div>

</div>

{% endblock %}
