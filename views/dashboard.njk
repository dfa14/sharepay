{% extends "layout.njk" %}

{% block content %}
<div>

  <h2> Welcome on your dashboard events </h2>
  <div class="row pt-3">
    <div class="col-lg-2">
      <button> + Add an activity </button>
    </div>
    <div class="col-lg-2">
      <button> History </button>
    </div>
  </div>


  <div class ="container">
    <div class="row justify-content-center">
      <h4> Events </h4>
    </div>
    <div class="row justify-content-center">
      <div class="col-4 titlegrid">
        Event Label
      </div>
      <div class="col-2 titlegrid">
        Event Status
      </div>
    </div>
    {% for item in tempevents %}
      <div class="row justify-content-center">
        <div class="col-4 grid">
          {{item.title}}
        </div>
        <div class="col-2 grid">
          {{item.status}}
          <button href="/"> Details </button>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

{% endblock %}
